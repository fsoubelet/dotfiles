# ~/.zshrc

export TERM="xterm-256color"
export ZSH=$HOME/.oh-my-zsh
export PATH=$HOME/bin:/usr/local/sbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin
export PATH="/opt/homebrew/bin:$PATH"
export EDITOR="vim"


# All shell customization
source "$HOME"/dotfiles/zsh/oh_my_zsh_settings.sh
source "$HOME"/dotfiles/zsh/aliases.sh
source "$HOME"/dotfiles/zsh/functions.sh
source "$HOME"/dotfiles/zsh/dockerfunc.sh
source "$HOME"/dotfiles/zsh/tmux.sh

export PATH="/opt/homebrew/sbin:$PATH"  # Add the homebrew sbin to PATH.
export PATH="$PATH:/usr/local/texlive/2021/bin/universal-darwin"  # Add MacTex to PATH
export PATH="/usr/local/opt/ruby/bin:$PATH" # Add Ruby and RVM to PATH
export PATH="$PATH:$HOME/.poetry/bin" # Add Poetry to the PATH
export PATH="$PATH:$HOME/.cargo/bin"  # Add cargo binaries to the PATH

# Using GNUPG encryption
export GPG_TTY=$(tty)
gpgconf --launch gpg-agent

# For bat to allow mouse scrolling
export BAT_PAGER="less -RF"
autoload -U +X bashcompinit && bashcompinit
complete -o nospace -C /usr/local/bin/bit bit

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/Users/felixsoubelet/mambaforge/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/Users/felixsoubelet/mambaforge/etc/profile.d/conda.sh" ]; then
        . "/Users/felixsoubelet/mambaforge/etc/profile.d/conda.sh"
    else
        export PATH="/Users/felixsoubelet/mambaforge/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

eval "$(starship init zsh)"
